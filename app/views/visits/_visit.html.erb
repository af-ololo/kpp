  <tr id="<%= visit.id %>">
    <td><%= visit.created_at.to_s(:time) %> <span class="date"><%= visit.created_at.to_s(:date) %></span></td>
    <td><%= if !visit.employee.nil?; link_to visit.employee.name, employee_visits_path(visit.employee); end %></td>
    <td><% if visit.inout == 'in' %>
    <i class="icon-arrow-right"></i>
    <% end %>
    <% if visit.inout == 'out' %>
    <i class="icon-arrow-left"></i>
    <% end %></td>
    <td><%= if !visit.office.nil?; visit.office.name; end %></td>
    <td><%= link_to 'Удалить', visit_url(visit), :method => 'delete', :remote => true %></td>
  </tr>
