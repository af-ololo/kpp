<h1>Отделения</h1>

<table>
<% @offices.each do |office| %>
  <tr>
    <td><%= link_to office.name, office %></td>
    <td><%= office.address %></td>
    <td><%= link_to 'Изменить', edit_office_path(office) %></td>
    <td><%= link_to 'Удалить', office, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить', new_office_path, :class => 'btn' %>
