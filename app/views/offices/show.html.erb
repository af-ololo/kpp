<h1>
  <%= @office.name %>
</h1>

<div style="text-align: center; padding-bottom: 25px;">
    <%= @office.address %>
  &nbsp; &nbsp;
    <% if @office.users.empty? %>
      Работник КПП: <%= link_to 'Создать аккаунт', new_office_user_path(@office) %>
    <% else %>
      Работник КПП: <%= link_to @office.users.first.email, edit_user_path(@office.users.first) %>
    <% end %>
</div>

<h2>Сотрудники отделения</h2>

<table>
  <%= render @office.employees %>
</table>

<br />

<%= link_to 'Добавить сотрудника', new_office_employee_path(@office), :class => 'btn' %>
